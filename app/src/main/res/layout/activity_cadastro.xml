<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.example.thiago.testeparse.Activity.CadastroActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logocadastro"/>

    <EditText
        android:id="@+id/edit_login_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/estilo_botao"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:hint="Digite o seu Login"
        android:textColorHint="#99FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/imageView2"/>

    <EditText
        android:id="@+id/text_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/estilo_botao"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:hint="Digite sua senha"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/text_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/button_logar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_senha"
            android:layout_marginTop="8dp"
            android:background="@drawable/estilo_botao_logar"
            android:onClick="abrirLoginUsuario"
            android:text="@string/botao_cadastrar"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    <EditText
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/estilo_botao"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:hint="Digite seu Email"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/edit_login_usuario"
        android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/text_faca_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_logar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/fazer_login"
            android:textSize="15dp" />

    </RelativeLayout>

</RelativeLayout>
